# SYNQ API credentials
# Obtain these from https://app.synq.io/settings/scout
SYNQ_CLIENT_ID=get-client-id-from-synq
SYNQ_CLIENT_SECRET=get-client-secret-from-synq

# OpenAI/LLM configuration
# API key for LiteLLM proxy (if required)
OPENAI_API_KEY=litellm-api-key

# Database connection validation (default: true)
# Set to false to disable connection validation on startup
# VALIDATE_CONNECTIONS=true
# Set to true to fail agent startup if any connection validation fails
# REQUIRE_VALID_CONNECTIONS=false
# Control plane configuration retrieval (default: false)
# Set to true to fail agent startup if cannot retrieve config from Scout AI control plane
# The agent retries 3 times with exponential backoff (2s, 4s, 8s) before failing
# REQUIRE_CONTROL_PLANE=false

# Database connection credentials
# Add only the credentials you need for your specific database connections

# PostgreSQL
POSTGRES_PASSWORD=your-postgres-password

# MySQL
MYSQL_PASSWORD=your-mysql-password

# BigQuery
# Store the service account JSON as a single-line string
BIGQUERY_SERVICE_ACCOUNT_KEY=your-bigquery-service-account-key-json

# ClickHouse
CLICKHOUSE_PASSWORD=your-clickhouse-password

# Snowflake
# Note: Private key authentication is preferred (password auth is deprecated)
# Option A: Inline private key (PEM content as string)
SNOWFLAKE_PRIVATE_KEY=your-snowflake-private-key-pem-content
# Option B: Path to private key file (when using mounted secrets)
# SNOWFLAKE_PRIVATE_KEY_FILE=/opt/secrets/snowflake-private-key.pem
# Optional: Passphrase for encrypted private keys (works with both inline and file)
# SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your-passphrase-if-key-is-encrypted

# Redshift
REDSHIFT_PASSWORD=your-redshift-password

# Databricks
DATABRICKS_ACCESS_TOKEN=your-databricks-access-token

# Trino
TRINO_PASSWORD=your-trino-password

# Logging configuration (all optional)
# LOG_FORMAT=json  # Output format: 'json' (default) or 'text'
# LOG_ADD_SOURCE=true  # Include source file location in logs (default: true)
# LOG_LEVEL=INFO  # Minimum log level: DEBUG, INFO (default), WARN, ERROR
